<div class="bs-example">
  <div class="panel-group" id="accordion">
    <% @avaible_materias.each do |materia| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href=<%="#collapse#{materia.id}"%> >
            <%= "#{materia.name}: #{materia.schedule} En #{materia.student.address} "%>
          </a>
          <a class="btn btn-primary btn-sm" href="<%= postulate_materia_path(materia)%>" style="float: right; center" data-confirm="Â¿Esta usted seguro?">Postular</a>
        </h2>
      </div>
      <div id="collapse<%=materia.id%>" class="panel-collapse collapse">
        <div class="panel-body">
          <div class="col-md-6">
            <h6>Tema: <%= materia.topic%> </h6>
            <h6>Duracion por sesion: <%= materia.duration%> horas </h6>
          </div>
          <div class="col-md-6">
            <h6>Alumno Fijo: <%= materia.student.is_fixed?%> </h6>
            <h6>Primera Sesion:  </h6>
          </div>
        </div>
      </div>
    </div>
    <%end%>
  </div>
</div>
